# Auto-activate virtual environment if it exists
source_env_if_exists .venv/bin/activate

# Add the project root to PYTHONPATH so you can import modules directly
export PYTHONPATH=$PWD:$PYTHONPATH

# Set Python to unbuffered mode (better for debugging + CLI output)
export PYTHONUNBUFFERED=1

# Optional: turn on debug flags for any future scripts that look for it
export DEBUG=1

# Optional: ensure pytest picks up your tests quickly
export PYTEST_ADDOPTS="-q --color=yes --maxfail=3"
